<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./test/Bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         verbose="true">
    <testsuites>
        <testsuite name="controller">
            <directory suffix="Test.php">./test/TckImageResizerTest/Controller</directory>
        </testsuite>
        <testsuite name="service">
            <directory suffix="Test.php">./test/TckImageResizerTest/Service</directory>
        </testsuite>
        <testsuite name="util">
            <directory suffix="Test.php">./test/TckImageResizerTest/Util</directory>
        </testsuite>
        <testsuite name="view">
            <directory suffix="Test.php">./test/TckImageResizerTest/View</directory>
        </testsuite>
    </testsuites>
  
    <logging>
        <log type="coverage-html" target="build/coverage" title="TckImageResizer"
             charset="UTF-8" yui="true" highlight="true"
             lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
        <log type="coverage-crap4j" target="build/logs/crap4j.xml"/>
        <log type="coverage-xml" target="build/logs/coverage/xml"/>
        <log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
  
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
        <blacklist>
            <directory suffix=".php">./vendor</directory>
            <directory suffix=".php">./test</directory>
            <file>./Module.php</file>
        </blacklist>
    </filter>
</phpunit>
